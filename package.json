{
  "name": "lummox",
  "description": "A user microservice.",
  "version": "0.1.0",
  "main": "server/server.js",
  "scripts": {
    "test": "npm run test-unit && npm run test-integration",
    "test-unit": "lab -t 100 test/server/",
    "test-integration": "lab test/_integration/",
    "test-lcov": "lab -t 100 -r lcov test/server/ | ./node_modules/coveralls/bin/coveralls.js",
    "test-cov-html": "lab -r console -o stdout -r html -o coverage.html test/server/",
    "start": "node server/server.js"
  },
  "engines": {
    "node": ">=0.10.22"
  },
  "dependencies": {
    "bcrypt": "^0.8.5",
    "boom": "^2.6.1",
    "confidence": "^1.2.0",
    "glue": "^2.2.0",
    "hapi": "^9.0.3",
    "hapi-auth-jwt2": "^5.0.4",
    "hapi-swagger": "^1.2.0",
    "hoek": "^2.16.3",
    "inert": "^3.0.1",
    "joi": "^5.1.0",
    "jsonwebtoken": "5.0.5",
    "mongodb": "^2.0.42",
    "mongoose": "3.8.23",
    "vision": "^3.0.0"
  },
  "keywords": [
    "node.js",
    "hapi.js",
    "mongoose",
    "angular"
  ],
  "author": {
    "name": "Simon Maxwell-Stewart",
    "email": "smaxwellstewart@gmail.com"
  },
  "devDependencies": {
    "code": "^1.5.0",
    "coveralls": "^2.11.4",
    "grunt": "^0.4.5",
    "grunt-contrib-cssmin": "^0.14.0",
    "grunt-contrib-htmlmin": "^0.5.0",
    "grunt-contrib-uglify": "^0.9.2",
    "grunt-contrib-watch": "^0.6.1",
    "grunt-run": "^0.4.0",
    "lab": "^5.15.2",
    "mongodb": "^2.0.42"
  }
}
